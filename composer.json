{
  "name": "natilosir/orm-wordpress",
  "description": "A lightweight PHP ORM package for WordPress",
  "type": "wordpress-plugin",
  "license": "MIT",
  "authors": [
    {
      "name": "natilos.ir",
      "email": "info@natilos.ir"
    }
  ],
  "require": {
    "php": ">=5.6"
  },
  "extra": {
    "wordpress-plugin": {
      "plugin": "ORM-WordPress.php"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "cp -r ./vendor/natilosir/orm/* ./",
      "rm -rf ./vendor"
    ],
    "post-update-cmd": [
      "cp -r ./vendor/natilosir/orm/* ./",
      "rm -rf ./vendor"
    ]
  },
  "config": {
    "vendor-dir": "vendor"
  }
}